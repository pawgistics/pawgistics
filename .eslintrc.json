{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "compat",
    "babel"
  ],
  "rules": {
    "compat/compat": 2,
    "import/no-extraneous-dependencies": "off",
    "jsx-a11y/anchor-is-valid": ["error", {
      "components": ["Link"],
      "specialLink": ["to"],
      "aspects": ["noHref", "invalidHref", "preferButton"]
    }],
    "quotes": 0,
    "babel/quotes": ["error", "single", { "avoidEscape": true }]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "polyfills": ["fetch"]
  },
  "globals": {
    "PROD": false
  }
}
